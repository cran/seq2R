citHeader("To cite seq2R in a publication use:")

citEntry(entry="Article",
   title = "{seq2R}: {An R package to detect DNA compositional change points with statistical support}",
   author = personList(as.person("Nora M. Villanueva"),
              as.person("Marta Sestelo"), as.person("Javier Roca Pardi\\~{n}as")),
   journal = "Computational Statistics and Data Analysis",
   year = "submitted 2012",

   textVersion = 
   paste("Nora M. Villanueva, Marta Sestelo and Javier Roca Pardinas (2012).",
         "seq2R: An R package to detect DNA compositional change points with statistical support.",
         "Computational Statistics and Data Analysis.")
)